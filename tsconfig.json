{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"strict": true,
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
		"target": "esnext",
		"allowJs": true,
		"jsx": "react",
		"baseUrl": "./",
		"paths": {
			"@client/*": ["./src/client/*"],
			"@server/*": ["./src/server/*"],
			"@cli/*": ["./src/cli/*"],
			"@core/*": ["./src/core/*"]
		}
	},
	"include": ["./src/**/*"]
}
